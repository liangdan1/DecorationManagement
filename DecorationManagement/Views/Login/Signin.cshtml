@{
    Layout = null;
}

@model DecorationManagement.Models.LoginViewModel

<div class="container divbolder">
    <div class="row">
        <div class="col-md-7"><h2 class="subheader">登录</h2></div>
        <div class="col-md-5"><a href="@Url.Action("Register","Login")" class="text-success pull-right subheader-a" style="">创建用户</a></div>
    </div>
    @using (Html.BeginForm("Signin", "Login", FormMethod.Post, new { role = "form", id = "myform" }))
    {
        @Html.AntiForgeryToken()
        <span class="text-danger">@TempData["ErrorMessage"]</span>
        <div class="form-group">
            <label for="name">邮件地址</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-danger" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="name">密码</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control text-danger" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success" id="btnSignIn">登录</button>
        </div>
        <input type="hidden" value="ViewBag.returnUrl" />
    }
</div>
